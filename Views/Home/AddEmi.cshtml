@{
    ViewData["Title"] = "AddEmi";
}

<section class="section profile">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-5">

            <div class="card">
                <div class="card-body pt-3">
                    <h5 class="card-title">EMI Add</h5>
                    <hr />
                    <div class="profile-edit pt-3" id="profile-edit">

                        <!-- Profile Edit Form onsubmit="return false" oninput="fullName.value = firstName.valueAsNumber + lastName.valueAsNumber"-->

                        <form class="row g-3 needs-validation" novalidate method="post" action="User/SaveUser" autocomplete="off">

                            <div class="row mb-3">
                                <label for="NickName" class="col-md-4 col-lg-3 col-form-label">Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="NickName" type="text" class="form-control" id="NickName" value="" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="FName" class="col-md-4 col-lg-3 col-form-label">Month</label>
                                <div class="col-md-8 col-lg-9">
                                    <select id="inputState" class="form-select">
                                        <option selected>Select Month</option>
                                        <option id="1">Jan</option>
                                        <option id="2">Feb</option>
                                        <option id="3">Mar</option>
                                        <option id="4">Apr</option>
                                        <option id="5">May</option>
                                        <option id="6">Jun</option>
                                        <option id="7">Jul</option>
                                        <option id="8">Aug</option>
                                        <option id="9">Sep</option>
                                        <option id="10">Oct</option>
                                        <option id="11">Nov</option>
                                        <option id="12">Dec</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Emi" class="col-md-4 col-lg-3 col-form-label">Emi</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="Emi" type="number" class="form-control" id="Emi" value="1000" placeholder="Emi" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Int" class="col-md-4 col-lg-3 col-form-label">Int</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="Int" type="number" class="form-control" id="Int" value="" placeholder="Int" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Debit" class="col-md-4 col-lg-3 col-form-label">Debit</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="Debit" type="number" class="form-control" id="Debit" value="" placeholder="Debit" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Credit" class="col-md-4 col-lg-3 col-form-label">Credit</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="Credit" type="number" class="form-control" id="Credit" value="" placeholder="Credit" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="Fine" class="col-md-4 col-lg-3 col-form-label">Fine</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="Fine" type="number" class="form-control" id="Fine" value="" placeholder="Fine" required>
                                </div>
                            </div>

                            <div class="text-center">
                                <button class="btn btn-primary">Save</button>
                                <button class="btn btn-danger">Cancel</button>
                            </div>
                        </form><!-- End Profile Edit Form -->
                    </div><!-- End Bordered Tabs -->
                </div>
            </div>
        </div>
    </div>
</section>

