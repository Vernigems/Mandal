<section class="section profile">
    <div class="row">
        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-3">
                    <h3>Edit Profile</h3>
                    <hr />
                    <div class="profile-edit pt-3" id="profile-edit">

                        <!-- Profile Edit Form onsubmit="return false" oninput="fullName.value = firstName.valueAsNumber + lastName.valueAsNumber"-->

                        <form class="row g-3 needs-validation" novalidate method="post" action="User/SaveUser" autocomplete="off">
                            <div class="row mb-3">
                                <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profile Image</label>
                                <div class="col-md-8 col-lg-9">
                                    <img src="assets/img/profile-img.jpg" alt="Profile">
                                    <div class="pt-2">
                                        <a href="#" class="btn btn-primary btn-sm" title="Upload new profile image"><i class="bi bi-upload"></i></a>
                                        <a href="#" class="btn btn-danger btn-sm" title="Remove my profile image"><i class="bi bi-trash"></i></a>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="NickName" class="col-md-4 col-lg-3 col-form-label">Full Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="NickName" type="text" class="form-control" id="NickName" readonly="readonly" value="" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="FName" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="FName" type="text" class="form-control" id="FName" value="" onkeyup="generateFullName()" placeholder="Fisrt Name" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="LName" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="LName" type="text" class="form-control" id="LName" value="" onkeyup="generateFullName()" placeholder="Last Name" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="address" class="col-md-4 col-lg-3 col-form-label">Address</label>
                                <div class="col-md-8 col-lg-9">
                                    <textarea name="address" class="form-control" id="address" style="height: 100px" placeholder="Address" required></textarea>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="mobile" class="col-md-4 col-lg-3 col-form-label">mobile</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="mobile" type="number" class="form-control" id="mobile" value="" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="refName" class="col-md-4 col-lg-3 col-form-label">Reference Name</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="refName" type="text" class="form-control" id="refName" value="" placeholder="Reference Name" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="refMobile" class="col-md-4 col-lg-3 col-form-label">Reference Mobile</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="refMobile" type="number" class="form-control" id="refMobile" value="" placeholder="Reference Mobile" required>
                                </div>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary">Save</button>
                                <a href="user/UserList" class="btn btn-danger">Cancel</a>
                            </div>
                        </form><!-- End Profile Edit Form -->
                    </div><!-- End Bordered Tabs -->
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function generateFullName()
        {
          $('#NickName').val($('#FName').val() + ' ' + $('#LName').val());
        }
    </script>

</section>

